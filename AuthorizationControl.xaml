<UserControl x:Class="VK_R.AuthorizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VK_R"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="LoginBox" Text="{Binding Login}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"></TextBox>
        <PasswordBox x:Name="PasswordBox" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"></PasswordBox>
        <Button x:Name="Authorize" Content="Authorize" Click="Authorize_Click" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"></Button>
    </Grid>
</UserControl>
