<Window x:Class="VK_R.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VK_R"
        mc:Ignorable="d"
        Title="CaptchaWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="Captcha" Grid.Column="0" Grid.Row="0" MaxWidth="100"></Image>
        <TextBox x:Name="SolvedCaptcha" Grid.Column="0" Grid.Row="1" MaxWidth="100"></TextBox>
        <Button x:Name="SolveCaptcha" Grid.Column="0" Grid.Row="2" MaxWidth="100"></Button>
    </Grid>
</Window>
