<Window x:Class="VK_R.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VK_R"    
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel x:Name="MainPanel" x:Uid="MainPanel">
        <DockPanel.Children>
       
            <local:DialogControl Visibility="Visible"/>
            <local:AuthorizationControl Visibility="Visible"></local:AuthorizationControl>
            <local:MessagesControl Visibility ="Visible"></local:MessagesControl>
        </DockPanel.Children>
    </DockPanel>
</Window>
