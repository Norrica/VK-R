<UserControl x:Class="VK_R.DialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VK_R"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="DialogDisplayer" ItemsSource="{Binding Dialogs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding PeerName}"/>
                        <Label Content="{Binding LastMessage}"/>
                        <Label Content="{Binding ProfilePicture}"/>
                        <Label Content="{Binding LastDevice}"/>
                        <Label Content="{Binding WasOnline}"/>
                        <TextBox x:Name="QuickReply" Text="{Binding QuickReply}"/>
                        <Button Content="Send" Command="{Binding SendQuickReplyCommand}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--<Label Grid.Row="0" Grid.Column="0" Content="ssss" Background="Blue"></Label>-->
    </Grid>
</UserControl>
