<UserControl x:Class="VK_R.MessagesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VK_R"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="Messages" ItemsSource="{Binding Messages}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Avatar}"/>
                        <Label Content="{Binding PeerName}"/>
                        <Label Content="{Binding Text}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel x:Name="BottomBar" Orientation="Horizontal">
            <Button x:Name="AttachAttachment" Content="{Binding !!!(Image)}"></Button>
            <TextBox x:Name="Reply" Text="{Binding !!!}"></TextBox>
            <Button x:Name="SendReply" Command="{Binding !!!}"></Button>
        </StackPanel>
        <!--<Label Grid.Row="0" Grid.Column="0" Foreground="Black" Background="AliceBlue" Height="100" Width="100" Content="ыыы"></Label>-->
    </Grid>
</UserControl>
